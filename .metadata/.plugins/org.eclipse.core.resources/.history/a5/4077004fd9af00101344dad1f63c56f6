package ex01;

public class if조건문06 {

	public static void main(String[] args) {
		
		/*
		 * 버스 요금 계산기
		 * 요금 : 2000
		 * 65세 이상 : 무료
		 * 20 ~ 64 : 할인율 0%
		 * 15 ~ 19 : 할인율 20%
		 * 7 ~ 14 : 할인율 50%
		 * 6 미만 : 무료
		 */
		 
		int number = 2000;
		if(number>= 18);
			System.out.println("나이 18는 1800요금 입니다");
	
		
		
		
		
		
		
		System.out.println("-----프로그램 종류-------");
}
}
